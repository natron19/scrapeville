<p id="notice"><%= notice %></p>

<h1>Welcome to Newsville</h1>

<div class="text-center">
  <%= will_paginate @newsvilles, renderer: BootstrapPagination::Rails  %>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Original Story</th>
      <th>Title</th>
      <th>Summary</th>
      <th>Posted At</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsvilles.each do |newsville| %>
      <tr>
        <td><%= link_to "Original Story", newsville.title_url, :target => "_blan" %></td>
        <td><%= newsville.title %></td>
        <td><%= newsville.body %></td>
        <td><%= newsville.created_at.strftime("%A, %d %b %Y %l:%M %p") %></td>
        <% if newsville.image_url.present? %>
        <td><%= image_tag newsville.image_url %></td>
        <% else %>
        <td><%= image_tag 'no-image.png' %></td>
        <% end %>
        <td><%= link_to 'Show', newsville, class: "btn btn-success btn-xs" %></td>
        <% if can? :update, @newsville %>
        <td><%= link_to 'Edit', edit_newsville_path(newsville), class: "btn btn-warning btn-xs" %></td>
        <% end %>
        <% if can? :destroy, @newsville %>
        <td><%= link_to 'Destroy', newsville, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Newsville', new_newsville_path %>

<br />

<div class="text-center">
  <%= will_paginate @newsvilles, renderer: BootstrapPagination::Rails  %>
</div>
